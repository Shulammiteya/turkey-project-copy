<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto">

<ImageView
    android:id="@+id/imageView_background"
    android:src="@drawable/background_0"
    android:scaleType="fitXY"
    android:layout_height="match_parent"
    android:layout_width="match_parent" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_20"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.20" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_80"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.80" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.00" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_100"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="1.00" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_V50"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.50" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_V0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.00" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_V100"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="1.00" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toRightOf="@id/guideline_V0"
    app:layout_constraintRight_toLeftOf="@id/guideline_V100"
    app:layout_constraintTop_toBottomOf="@id/guideline_0"
    app:layout_constraintBottom_toTopOf="@id/guideline_20"
    android:gravity="center"
    android:text="結果"
    android:textSize="30dp"
    />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="@+id/guideline_80"
    app:layout_constraintTop_toBottomOf="@id/guideline_20"
    app:layout_constraintLeft_toRightOf="@id/guideline_V0"
    app:layout_constraintRight_toLeftOf="@id/guideline_V50" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="大腿運動"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="向上抬腳"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="側邊抬腿"
        android:textSize="30dp" />

</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="@+id/guideline_80"
    app:layout_constraintTop_toBottomOf="@id/guideline_20"
    app:layout_constraintRight_toRightOf="@id/guideline_V100"
    app:layout_constraintLeft_toRightOf="@id/guideline_V50" >


    <TextView
        android:id="@+id/txtFirstTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="次"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtSecondTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="次"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtThirdTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="次"
        android:textSize="30dp" />

</LinearLayout>

<Button
    android:id="@+id/btnReturn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/guideline_80"
    app:layout_constraintBottom_toTopOf="@id/guideline_100"
    app:layout_constraintRight_toLeftOf="@id/guideline_V100"
    app:layout_constraintLeft_toRightOf="@id/guideline_V0"
    android:text="返回"
    android:textSize="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>